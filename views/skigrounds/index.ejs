<% include ../partials/header %>



 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To vacationski!</h1>
             <p>View our hand-picked skipgrounds from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/skigrounds/new">Add New skiground</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% skigrounds.forEach(function(skiground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= skiground.image %>">
                   <div class="caption">
                       <h4><%= skiground.name %></h4>
                   </div>
                   <p>
                       <a href="/skigrounds/<%= skiground._id %>" class="btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>